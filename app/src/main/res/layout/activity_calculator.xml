<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/Layout_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<ImageView
    android:id="@+id/headerImageView"
    android:src="@drawable/ic_calculatorpage"
    android:alpha="1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/number1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerImageView"
        android:hint="@string/enter_number_1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/number1Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/number2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number1Layout"
        android:hint="@string/enter_number_2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/number2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/subButton"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number2Layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_minus"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/divideButton"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addButton"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_division"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/multiplyButton"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_multiply"
        app:fabSize="normal" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addButton"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number2Layout"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_add"
        app:fabSize="normal" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/clearButton"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_clear"
        app:fabSize="normal" />

</RelativeLayout>





